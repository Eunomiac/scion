<form class="{{cssClass}} flex-col height100 main" autocomplete="off">
    <div class="closeButton">‚ùå</div>
    <div class="tooltip helper tipRight">{{> (blocks.tooltips.template) (lookup tooltips.paths data.type)}}</div>
    {{!-- Sheet Header --}}
    <section class="header width100">
        <h1 class="title alignCenter">{{loc (concat "scion.path." data.type "Path")}}</h1>
        <div id="pathTitle" class="h2 contentEditable quote alignCenter" data-field="data.title" data-placeholder="{{loc "scion.heading.path.titlePrompt"}}"></div>
    </section>
        
    <section class="sheet-body flex-col-spaceBetween width100">
        <h2 class="alignCenter">{{loc "scion.heading.path.pathSkills"}}</h2>
        <div id="pathSkillMirror" class="pathSkills mirrorContainer"></div>
        <div id="pathSkills" class="pathSkills skillDrop flex-row-start width100" data-htmlID="skillList">
            {{#each data.skills as |skill|}}
            {{#if skill}}
            <span class="skill noFlex
            {{~#if (lte @index 1)}}{{#if (eq ../data.type "pantheon")}} pantheon{{/if}}{{/if}}" data-skill="{{skill}}">{{loc (concat "scion.skill." skill ".name")}}</span>
            {{/if}}
            {{/each}}            
        </div>
        {{!-- {{#with (bundle "actorID" actorID "blocks" blocks "tooltips" tooltips.skills "skills" skills "type" data.type) as |skillData|}} --}}
            {{> (blocks.popouts.skillList.template) (bundle "actorID" actorID "blocks" blocks "tooltips" tooltips.skills "skills" skills "type" data.type) }}
        {{!-- {{/with}} --}}
        <div class="pathConnections width100 alignCenter">
            <h2>{{loc "scion.heading.path.pathConnections"}}</h2>
            <div id="connectionDescription" class="connectionDescription insetFrame contentEditable alignLeft" data-clamplines="4" data-field="data.connectionDescription" data-placeholder="{{loc "scion.heading.path.pathConnectionsPrompt" "path" (concat "scion.path." data.type "Path")}}">{{data.connectionDescription}}</div>
        </div>
        <h2 class="alignCenter">{{loc "scion.heading.path.pathConditions"}}</h2>
        <div class="pathCondition flex-row alignCenter width100">
            {{#each conditions as |condition type|}}
                {{> (../blocks.partials.pathCondition.template) condition}}
            {{/each}}
        </div>
    </section>
    
</form>
